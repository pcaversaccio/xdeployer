{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDirs": ["./src", "./test"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./test", "./src"],
  "files": ["eslint.config.js"],
  "exclude": ["dist", "node_modules"]
}
