    "@types/chai": "^4.3.20",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.6.2",
    "chai": "^4.5.0",
    "eslint": "^9.37.0",
