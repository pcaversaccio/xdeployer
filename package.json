{
  "name": "xdeployer",
  "version": "1.1.6",
  "description": "Hardhat plugin to deploy your smart contracts across multiple EVM chains with the same deterministic address.",
  "author": "Pascal Marco Caversaccio <pascal.caversaccio@hotmail.ch>",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "deployment",
    "ethereum",
    "create2",
    "hardhat",
    "hardhat-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pcaversaccio/xdeployer.git"
  },
  "bugs": {
    "url": "https://github.com/pcaversaccio/xdeployer/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "prettier:check": "prettier -c src/**/*.{js,ts,sol} test/**/*.{js,ts,sol}",
    "prettier:fix": "prettier --write src/**/*.{js,ts,sol} test/**/*.{js,ts,sol}",
    "lint": "eslint --ext .ts .",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "2.0.5",
    "@openzeppelin/contracts": "4.5.0",
    "@types/chai": "4.3.0",
    "@types/fs-extra": "9.0.13",
    "@types/mocha": "5.2.7",
    "@types/node": "16.11.26",
    "@typescript-eslint/eslint-plugin": "5.14.0",
    "@typescript-eslint/parser": "5.14.0",
    "chai": "4.3.6",
    "eslint": "8.10.0",
    "eslint-config-prettier": "8.5.0",
    "ethers": "5.5.4",
    "hardhat": "2.9.1",
    "mocha": "7.2.0",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "ts-node": "8.10.2",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.3.0",
    "typescript": "4.6.2"
  },
  "peerDependencies": {
    "hardhat": "^2.9.1",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@openzeppelin/contracts": "^4.5.0"
  }
