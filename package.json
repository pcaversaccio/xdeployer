    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "peerDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "ethers": "^6.15.0",
