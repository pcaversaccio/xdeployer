{
  "name": "xdeployer",
  "version": "3.1.2",
  "description": "Hardhat plugin to deploy your smart contracts across multiple EVM chains with the same deterministic address.",
  "author": "Pascal Marco Caversaccio <pascal.caversaccio@hotmail.ch>",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "deployment",
    "ethereum",
    "create2",
    "hardhat",
    "hardhat-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pcaversaccio/xdeployer.git"
  },
  "homepage": "https://github.com/pcaversaccio/xdeployer#readme",
  "bugs": {
    "url": "https://github.com/pcaversaccio/xdeployer/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "prettier:check": "npx prettier -c \"**/*.{js,ts,md,sol,json,yml,yaml}\"",
    "prettier:fix": "npx prettier -w \"**/*.{js,ts,md,sol,json,yml,yaml}\"",
    "lint:check": "pnpm prettier:check && npx eslint .",
    "lint:fix": "pnpm prettier:fix && npx eslint . --fix",
    "test": "mocha --exit --recursive \"test/**/*.test.ts\"",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "pnpm build"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@types/chai": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.4",
    "chai": "^5.0.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "ethers": "^6.13.2",
    "hardhat": "^2.22.12",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  },
  "peerDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
